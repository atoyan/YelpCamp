<% include ../partials/header %>

<div class="row">
<div class="container">

<h1 style="text-align: center">Edit <%= campground.name %></h1>
<div style="margin: 25px auto; width: 30%;">
<form action="/campgrounds/<%=campground._id %>/?_method=PUT" method="POST">
    <div class="form-group">
    <input class="form-control" type="text" name="name" placeholder="name" value="<%= campground.name %>">
    </div>
      <div class="form-group">
    <input class="form-control" type="text" name="image" placeholder="image URL" value=" <%= campground.image %>" >
    </div>
     <div class="form-group">
    <input class="form-control" type="text" name="desc" placeholder="description" value=" <%= campground.desc %>">
    </div>
      <div class="form-group">
        <button class="btn btn-lg btn-default btn-block btn-primary"> Submit </button>
        </div>
    </form>
    <a href="/campgrounds">Go Back</a>
    </div>
    
    
    
    </div>
    </div>
    <% include ../partials/footer %>